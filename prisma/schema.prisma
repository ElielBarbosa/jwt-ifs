generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id     Int    @id @default(autoincrement())
  login  String @unique
  senha  String

  saldo  Saldo?
}

model Saldo {
  id        Int     @id @default(autoincrement())
  usuarioId Int     @unique
  valor     Float   @default(0)

  usuario   Usuario @relation(fields: [usuarioId], references: [id])
}